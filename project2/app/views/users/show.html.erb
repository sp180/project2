<h1>User Profile</h1>

<%= current_user.alias %>
<%= current_user.email %>

<h2>
  Create A Post
</h2>
<h4>
<%= link_to "Create Post", new_user_post_path(current_user) %>
</h4>
<h2>
  List of User's Posts
</h2>
<h4>
<%= link_to "See Current User's Posts", user_posts_path(current_user) %>
</h4>
<p>
  User Details Below
</p>
  <ul>
    <li>
      <%= link_to "ID: #{current_user.id}", "/users/#{current_user.id}" %>
      <%= link_to "Edit Profile", "/users/#{current_user.id}/edit" %>
      Alias: <%= current_user.alias %>
      Email: <%= current_user.email %>
    </li>
  </ul>
<h4>
<%= link_to "See List of Users", "/users" %>
</h4>
