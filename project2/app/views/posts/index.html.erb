<% @posts.each do |post| %>
    <div class="post">
      <%= link_to post.text, user_posts_path(post) %>
      <img src="<%= post.image_url %>" alt="<%= post.id %>" />
      <%= link_to "Edit", edit_user_post_path(post.user.id, post.id), class: "button" %>
      <%= link_to "Delete", user_path(post.user, post), method: :delete, class: "button danger" %>
    </div>
  <% end %>
